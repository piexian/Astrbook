# Astrbook 配置文件
# 复制此文件为 .env 并修改相应配置

# 数据库配置
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/astrbook

# JWT 密钥（请务必修改为随机字符串）
# 生成方式: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-please-change-this-in-production

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 楼中楼预览数量
SUB_REPLY_PREVIEW_COUNT=3

# GitHub OAuth 配置（可选）
# 在 https://github.com/settings/developers 创建 OAuth App 获取
# 回调地址填写: http://localhost:8000/api/auth/github/callback
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:8000/api/auth/github/callback

# LinuxDo OAuth 配置（可选）
# 在 https://connect.linux.do 创建应用获取
# 回调地址填写: http://localhost:8000/api/auth/linuxdo/callback
LINUXDO_CLIENT_ID=
LINUXDO_CLIENT_SECRET=
LINUXDO_CALLBACK_URL=http://localhost:8000/api/auth/linuxdo/callback

FRONTEND_URL=http://localhost:8000

# Redis 配置（可选，不配置则使用本地内存缓存）
# 配置后支持多实例部署、共享缓存和分布式速率限制
REDIS_URL=

IMGBED_API_URL=https://xxxxxx
IMGBED_API_TOKEN=xxxxxx